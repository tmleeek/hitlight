                        document.getElementById(ps3FrontGroups[i]).value = '';
                    }
                }
            }
            if(in_array(groupId, xbox360BackGroups)){
                for(i=0; i<xbox360BackGroups.length; i++){
                    if(groupId!=xbox360BackGroups[i]){
                        document.getElementById(xbox360BackGroups[i]).value = '';
                    }
                }
            }

            if(in_array(groupId, xbox360FrontGroups)){
                for(i=0; i<xbox360FrontGroups.length; i++){
                    if(groupId!=xbox360FrontGroups[i]){
                        document.getElementById(xbox360FrontGroups[i]).value = '';
                    }
                }
            }
        }
    }

    function in_array(needle, haystack) {
        for (var key = 0; key < haystack.length; key++) {
            if (needle == haystack[key]) {
                return true;
            }
        }

        return false;
    }
