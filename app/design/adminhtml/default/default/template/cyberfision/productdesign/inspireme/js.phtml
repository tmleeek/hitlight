                for(i=0; i<xboxOneBackGroups.length; i++){
                    if(groupId!=xboxOneBackGroups[i]){
                        document.getElementById(xboxOneBackGroups[i]).value = '';
                    }
                }
            }

            if(in_array(groupId, ps4FrontGroups)){
                for(i=0; i<ps4FrontGroups.length; i++){
                    if(groupId!=ps4FrontGroups[i]){
                        document.getElementById(ps4FrontGroups[i]).value = '';
                    }
                }
            }

            if(in_array(groupId, ps4BackGroups)){
                for(i=0; i<ps4BackGroups.length; i++){
                    if(groupId!=ps4BackGroups[i]){
                        document.getElementById(ps4BackGroups[i]).value = '';
                    }
                }
            }

