                for(i=0; i<ps4TrackpadGroups.length; i++){
                    if(groupId!=ps4TrackpadGroups[i]){
                        document.getElementById(ps4TrackpadGroups[i]).value = '';
                    }
                }
            }

            if(in_array(groupId, ps3BackGroups)){
                for(i=0; i<ps3BackGroups.length; i++){
                    if(groupId!=ps3BackGroups[i]){
                        document.getElementById(ps3BackGroups[i]).value = '';
                    }
                }
            }

            if(in_array(groupId, ps3FrontGroups)){
                for(i=0; i<ps3FrontGroups.length; i++){
