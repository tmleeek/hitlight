<layout version="0.1.0">
    <magpleasure_default>
        <update handle="apply_jquery"/>
        <update handle="apply_jquery_easing"/>
        <update handle="apply_jquery_fitvids"/>

        <reference name="head">
            <action method="addCss">
                <stylesheet>mp_activecontent/css/styles.css</stylesheet>
            </action>
            <action method="addItem">
                <type>js_css</type>
                <name>mp_activecontent/vendor/bxslider/jquery.bxslider.css</name>
            </action>
        </reference>
        <reference name="extra_head">
            <action method="addSafeJs">
                <alias>jQuery.fn.bxSlider</alias>
                <script>mp_activecontent/vendor/bxslider/jquery.bxslider.min.js</script>
            </action>
        </reference>
    </magpleasure_default>
</layout>
