<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <name>js/mageworx/downloads/downloads.js</name>
            </action>
            <action method="addCss">
                <stylesheet>css/mageworx/downloads/downloads.css</stylesheet>
            </action>
        </reference>
        <reference name="after_body_start">
            <block type="core/template" template="mageworx/downloads/init_popup.phtml" name="init_video_popup"/>
        </reference>
        <reference name="before_body_end">
            <block type="core/template" template="mageworx/downloads/video_popup.phtml" name="video_popup"/>
        </reference>
    </default>

    <catalog_product_view>
        <reference name="product.info">
            <block type="mageworx_downloads/product" name="downloads.product"/>
        </reference>
    </catalog_product_view>

    <mageworx_downloads_instruction_index>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <!-- Our page content block -->
            <block type="mageworx_downloads/instruction" name="instruction"
                   template="mageworx/downloads/instructions.phtml"/>
        </reference>
    </mageworx_downloads_instruction_index>
</layout>