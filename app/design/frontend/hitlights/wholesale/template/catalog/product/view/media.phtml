/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */

/* @var $this Mage_Catalog_Block_Product_View_Media */
?>
<?php
$_product = $this->getProduct();
$_helper = $this->helper('catalog/output');
?>

<div class="gallery-view-image">
    <?php $first_image = $this->getGalleryImages()->getFirstItem() ?>
    <div class="show-gallery-image">
    <?php if(isset($first_image)): ?>
        <img class="gallery-image" src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $first_image->getFile())->resize(800,800); ?>" alt="" />
    <?php else: ?>
        <img class="gallery-image" src="<?php echo $this->helper('catalog/image')->init($_product, 'image') ?>" alt="" />
    <?php endif; ?>
    </div>
</div>

<?php if (count($this->getGalleryImages()) > 0): ?>
    <div class="more-gallery-views">
        <ul class="product-image-thumbs">
            <?php foreach ($this->getGalleryImages() as $_image): ?>
                <?php if ($this->isGalleryImageVisible($_image)): ?>
                    <li data-image="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile())->resize(800,800); ?>">
                            <img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(75); ?>" width="75" height="75" alt="<?php echo $this->escapeHtml($_image->getLabel()) ?>" />
                    </li>
                <?php endif; ?>
                <?php endforeach; ?>
        </ul>
    </div>
<?php endif; ?>