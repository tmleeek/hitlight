<?xml version="1.0" ?>
<!--
/**
 * System configuration file
 */
-->
<config>
	
	<tabs>
		<imedia translate="label" module="quickview">
			<label>iMedia Extensions</label>
			<sort_order>20</sort_order>
		</imedia>
	</tabs>

    <sections>
        <quickview translate="label" module="quickview">
            <class>separator-top</class>
            <label>Quickview</label>
            <tab>imedia</tab>
            <frontend_type>text</frontend_type>
            <sort_order>13</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>

			<groups>
                <quickview translate="label">
                    <label>Quickview</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<enable translate="label">
                            <label>Enable Quickview Extension</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
						<enable_jquery translate="label">
                            <label>Enable jQuery</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_jquery>
                    </fields>
                </quickview>
             
            </groups>
			
        </quickview>
    </sections>
</config>