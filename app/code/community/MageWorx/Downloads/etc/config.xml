<config>
    <modules>
        <MageWorx_Downloads>
            <version>1.7.1</version>
        </MageWorx_Downloads>
    </modules>

    <frontend>
        <translate>
            <modules>
                <MageWorx_Downloads>
                    <files>
                        <default>MageWorx_Downloads.csv</default>
                    </files>
                </MageWorx_Downloads>
            </modules>
        </translate>
        <routers>
            <mageworx_downloads>
                <use>standard</use>
                <args>
                    <module>MageWorx_Downloads</module>
                    <frontName>downloads</frontName>
                </args>
            </mageworx_downloads>
        </routers>
        <layout>
            <updates>
                <mageworx_downloads>
                    <file>mageworx_downloads.xml</file>
                </mageworx_downloads>
            </updates>
        </layout>
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <mageworx_downloads_add_files_on_category>
                        <class>MageWorx_Downloads_Model_Observer</class>
                        <method>addFilesOnCategory</method>
                    </mageworx_downloads_add_files_on_category>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
    </frontend>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <MageWorx_Downloads before="Mage_Adminhtml">MageWorx_Downloads_Adminhtml</MageWorx_Downloads>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <global>
        <models>
            <mageworx_downloads>
                <class>MageWorx_Downloads_Model</class>
                <resourceModel>mageworx_downloads_resource</resourceModel>
            </mageworx_downloads>
            <mageworx_downloads_resource>
                <class>MageWorx_Downloads_Model_Resource</class>
                <entities>
                    <categories>
                        <table>mageworx_downloads_categories</table>
                    </categories>
                    <files>
                        <table>mageworx_downloads_files</table>
                    </files>
                    <relation>
                        <table>mageworx_downloads_relation</table>
                    </relation>
                    <customer>
                        <table>mageworx_downloads_customer</table>
                    </customer>
                </entities>
            </mageworx_downloads_resource>
            <catalog>
                <rewrite>
                    <product>MageWorx_Downloads_Model_Catalog_Product</product>
                </rewrite>
            </catalog>
        </models>
        <resources>
            <mageworx_downloads_setup>
                <setup>
                    <module>MageWorx_Downloads</module>
                    <class>MageWorx_Downloads_Model_Resource_Setup</class>
                </setup>
            </mageworx_downloads_setup>
        </resources>
        <blocks>
            <mageworx_downloads>
                <class>MageWorx_Downloads_Block</class>
            </mageworx_downloads>
            <sales>
                <rewrite>
                    <order_email_items>MageWorx_Downloads_Block_Sales_Order_Email_Items</order_email_items>
                    <order_email_invoice_items>MageWorx_Downloads_Block_Sales_Order_Email_Invoice_Items</order_email_invoice_items>
                </rewrite>
            </sales>
        </blocks>
        <helpers>
            <mageworx_downloads>
                <class>MageWorx_Downloads_Helper</class>
            </mageworx_downloads>
        </helpers>
    </global>

    <adminhtml>
        <layout>
            <updates>
                <mageworx_downloads>
                    <file>mageworx_downloads.xml</file>
                </mageworx_downloads>
            </updates>
        </layout>
        <events>
            <catalog_product_save_after>
                <observers>
                    <mageworx_downloads_save_product_files>
                        <class>MageWorx_Downloads_Model_Observer</class>
                        <method>saveProductFiles</method>
                    </mageworx_downloads_save_product_files>
                </observers>
            </catalog_product_save_after>
            <core_block_abstract_to_html_before>
                <observers>
                    <mageworx_downloads_add_customer_downloads_tabs>
                        <class>MageWorx_Downloads_Model_Observer</class>
                        <method>addCustomerDownloadsTab</method>
                    </mageworx_downloads_add_customer_downloads_tabs>
                </observers>
            </core_block_abstract_to_html_before>
        </events>
    </adminhtml>

    <default>
        <mageworx_downloads>
            <main>
                <size_precision>1</size_precision>
                <group_by_category>0</group_by_category>
                <sort_order>1</sort_order>
                <display_size>1</display_size>
                <display_downloads>0</display_downloads>
                <hide_files>1</hide_files>
                <block_position>1</block_position>
                <enable_files_on_category_pages>0</enable_files_on_category_pages>
                <enable_in_emails>0</enable_in_emails>
                <name_size>10</name_size>
                <import_limit>10</import_limit>
            </main>
        </mageworx_downloads>
    </default>
</config>