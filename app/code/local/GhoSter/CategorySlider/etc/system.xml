<?xml version="1.0"?>
<config>
    <tabs>
        <ghoster translate="label">
            <label>GhoSter.., Inc</label>
            <sort_order>150</sort_order>
        </ghoster>
    </tabs>
    <sections>
        <category_slider translate="label" module="adminhtml">
            <label>Category Slider</label>
            <tab>ghoster</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label comment">
                    <label>General Settings</label>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label comment">
                            <label>Enable/Disable</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>1</sort_order>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </active>
                        <categories>
                            <label>Select Your Categories</label>
                            <frontend_type>multiselect</frontend_type>
                            <comment>Categories which be shown up in Home Page.</comment>
                            <sort_order>2</sort_order>
                            <source_model>ghoster_categoryslider/categories</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </categories>
                        <enabled translate="label">
                            <label>Enable jQuery Library</label>
                            <comment>Choose No if jquery already included in your site.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <active>1</active>
                            </depends>
                        </enabled>
                        <transition translate="label comment">
                            <label>Transitions</label>
                            <comment>Slider Transitions with global scope.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>ghoster_categoryslider/system_config_source_dropdown_transitions</source_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <active>1</active>
                            </depends>
                        </transition>
                        <pager translate="label comment">
                            <label>Pager</label>
                            <frontend_type>select</frontend_type>
                            <source_model>ghoster_categoryslider/system_config_source_dropdown_pager</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <active>1</active>
                            </depends>
                        </pager>
                        <controls translate="label comment">
                            <label>Controls</label>
                            <comment>Choose False if you don't want controls (next, previous arrows)</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>ghoster_categoryslider/system_config_source_dropdown_controls</source_model>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <active>1</active>
                            </depends>
                        </controls>
                        <speed translate="label comment">
                            <label>Speed</label>
                            <comment>Transition duration (seconds) (default:800).</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <active>1</active>
                            </depends>
                        </speed>
                        <pauseonhover translate="label comment">
                            <label>Pause On Hover</label>
                            <comment>Choose Disable if you don't want sideshow pause automatically on hover..</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>ghoster_categoryslider/system_config_source_dropdown_pauseonhover</source_model>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <active>1</active>
                            </depends>
                        </pauseonhover>
                        <easing translate="label comment">
                            <label>Easing</label>
                            <comment>Easing effect to use for the selected transition.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>ghoster_categoryslider/system_config_source_dropdown_effect</source_model>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <active>1</active>
                            </depends>
                        </easing>
                    </fields>
                </general>
            </groups>
        </category_slider>
    </sections>
</config>
