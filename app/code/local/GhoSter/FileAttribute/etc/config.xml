<?xml version="1.0"?>
<config>
    <modules>
        <GhoSter_FileAttribute>
            <version>1.0.0</version>
        </GhoSter_FileAttribute>
    </modules>
    <global>
        <blocks>
            <ghoster_fileattribute>
                <class>GhoSter_FileAttribute_Block</class>
            </ghoster_fileattribute>
        </blocks>
        <models>
            <ghoster_fileattribute>
                <class>GhoSter_FileAttribute_Model</class>
            </ghoster_fileattribute>
        </models>
        <helpers>
            <ghoster_fileattribute>
                <class>GhoSter_FileAttribute_Helper</class>
            </ghoster_fileattribute>
        </helpers>
        <events>
            <catalog_entity_attribute_save_before>
                <observers>
                    <ghoster_fileattribute>
                        <type>model</type>
                        <class>ghoster_fileattribute/observer</class>
                        <method>assignBackendModelToAttribute</method>
                    </ghoster_fileattribute>
                </observers>
            </catalog_entity_attribute_save_before>
        </events>
    </global>
    <adminhtml>
        <events>
            <adminhtml_product_attribute_types>
                <observers>
                    <ghoster_fileattribute>
                        <type>model</type>
                        <class>ghoster_fileattribute/observer</class>
                        <method>addFileAttributeType</method>
                    </ghoster_fileattribute>
                </observers>
            </adminhtml_product_attribute_types>
            <adminhtml_catalog_product_edit_element_types>
                <observers>
                    <ghoster_fileattribute>
                        <class>ghoster_fileattribute/observer</class>
                        <method>updateElementTypes</method>
                    </ghoster_fileattribute>
                </observers>
            </adminhtml_catalog_product_edit_element_types>
            <adminhtml_catalog_product_form_prepare_excluded_field_list>
                <observers>
                    <ghoster_fileattribute>
                        <class>ghoster_fileattribute/observer</class>
                        <method>updateExcludedFieldList</method>
                    </ghoster_fileattribute>
                </observers>
            </adminhtml_catalog_product_form_prepare_excluded_field_list>
        </events>
    </adminhtml>
    <frontend>
        <events>
            <catalog_helper_output_construct>
                <observers>
                    <ghoster_fileattribute>
                        <type>singleton</type>
                        <class>ghoster_fileattribute/observer</class>
                        <method>changeFileAttributeOutput</method>
                    </ghoster_fileattribute>
                </observers>
            </catalog_helper_output_construct>
        </events>
    </frontend>
    <default>
        <general>
            <validator_data>
                <input_types>
                    <ghoster_file>ghoster_file</ghoster_file>
                </input_types>
            </validator_data>
        </general>
    </default>
</config>