<?xml version="1.0"?>
<config>
    <modules>
        <Magegiant_Onestepcheckout>
            <version>4.0.0</version>
            <platform>ce</platform>
        </Magegiant_Onestepcheckout>
    </modules>
    <admin>
        <routers>
            <onestepcheckoutadmin>
                <use>admin</use>
                <args>
                    <module>Magegiant_Onestepcheckout</module>
                    <frontName>onestepcheckoutadmin</frontName>
                </args>
            </onestepcheckoutadmin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <onestepcheckout>
                    <file>magegiant/onestepcheckout.xml</file>
                </onestepcheckout>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magegiant_Onestepcheckout>
                    <files>
                        <default>Magegiant_Onestepcheckout.csv</default>
                    </files>
                </Magegiant_Onestepcheckout>
            </modules>
        </translate>
        <events>
            <onestepcheckout_attribute_after_save>
                <observers>
                    <onestepcheckout_observer>
                        <type>singleton</type>
                        <class>onestepcheckout/adminhtml_observer</class>
                        <method>afterSaveAttribute</method>
                    </onestepcheckout_observer>
                </observers>
            </onestepcheckout_attribute_after_save>
            <onestepcheckout_address_attribute_after_save>
                <observers>
                    <onestepcheckout_observer>
                        <type>singleton</type>
                        <class>onestepcheckout/adminhtml_observer</class>
                        <method>afterSaveAttribute</method>
                    </onestepcheckout_observer>
                </observers>
            </onestepcheckout_address_attribute_after_save>
            <controller_action_postdispatch_adminhtml_system_config_save>
                <observers>
                    <onestepcheckout_system_config_save>
                        <type>singleton</type>
                        <class>onestepcheckout/adminhtml_observer</class>
                        <method>adminhtmlSystemConfigSave</method>
                    </onestepcheckout_system_config_save>
                </observers>
            </controller_action_postdispatch_adminhtml_system_config_save>
        </events>
    </adminhtml>
    <frontend>
        <secure_url>
            <onestepcheckout_index>/onestepcheckout/index</onestepcheckout_index>
            <onestepcheckout_ajax>/onestepcheckout/ajax</onestepcheckout_ajax>
        </secure_url>
        <layout>
            <updates>
                <onestepcheckout_ebizmarts_sagepay module="Ebizmarts_SagePaySuite">
                    <file>magegiant/onestepcheckout/payment/ebizmarts_sagepay.xml</file>
                </onestepcheckout_ebizmarts_sagepay>
                <onestepcheckout_netresearch_ops module="Netresearch_OPS">
                    <file>magegiant/onestepcheckout/payment/netresearch_ops.xml</file>
                </onestepcheckout_netresearch_ops>
                <onestepcheckout>
                    <file>magegiant/onestepcheckout.xml</file>
                </onestepcheckout>
            </updates>
        </layout>
        <routers>
            <onestepcheckout>
                <use>standard</use>
                <args>
                    <module>Magegiant_Onestepcheckout</module>
                    <frontName>onestepcheckout</frontName>
                </args>
            </onestepcheckout>
        </routers>
        <events>
            <controller_action_predispatch_checkout>
                <observers>
                    <onestepcheckout_checkout_controller_predispatch>
                        <type>singleton</type>
                        <class>onestepcheckout/observer</class>
                        <method>controllerActionPredispatchCheckout</method>
                    </onestepcheckout_checkout_controller_predispatch>
                </observers>
            </controller_action_predispatch_checkout>
            <checkout_submit_all_after>
                <observers>
                    <onestepcheckout_checkout_submit_all_after>
                        <type>singleton</type>
                        <class>onestepcheckout/observer</class>
                        <method>checkoutSubmitAllAfter</method>
                    </onestepcheckout_checkout_submit_all_after>
                </observers>
            </checkout_submit_all_after>
            <paypal_prepare_line_items>
                <observers>
                    <magegiant_onstepcheckout_paypal_prepare_line_items>
                        <type>singleton</type>
                        <class>onestepcheckout/observer</class>
                        <method>paypalPrepareLineItems</method>
                    </magegiant_onstepcheckout_paypal_prepare_line_items>
                </observers>
            </paypal_prepare_line_items>
            <core_layout_update_updates_get_after>
                <observers>
                    <onestepcheckout_core_layout_update_updates_get_after>
                        <class>onestepcheckout/observer</class>
                        <method>coreLayoutUpdateUpdatesGetAfter</method>
                    </onestepcheckout_core_layout_update_updates_get_after>
                </observers>
            </core_layout_update_updates_get_after>
            <!-- for compatibility with Paypal Hosted Pro -->
            <controller_action_postdispatch_onestepcheckout_ajax_placeOrder>
                <observers>
                    <onestepcheckout_osc_placeorder_controller_postdispatch>
                        <class>onestepcheckout/observer</class>
                        <method>controllerActionPostdispatchOnestepcheckoutAjaxPlaceOrder</method>
                    </onestepcheckout_osc_placeorder_controller_postdispatch>
                </observers>
            </controller_action_postdispatch_onestepcheckout_ajax_placeOrder>
            <!-- for compatibility with Authorize.net Direct Post (DPM) -->
            <core_layout_block_create_after>
                <observers>
                    <onestepcheckout_core_layout_block_create_after>
                        <class>onestepcheckout/observer</class>
                        <method>coreLayoutBlockCreateAfterOnestepcheckout</method>
                    </onestepcheckout_core_layout_block_create_after>
                </observers>
            </core_layout_block_create_after>
        </events>
        <translate>
            <modules>
                <Magegiant_Onestepcheckout>
                    <files>
                        <default>Magegiant_Onestepcheckout.csv</default>
                    </files>
                </Magegiant_Onestepcheckout>
            </modules>
        </translate>
    </frontend>
    <global>
        <blocks>
            <onestepcheckout>
                <class>Magegiant_Onestepcheckout_Block</class>
            </onestepcheckout>
        </blocks>
        <models>
            <onestepcheckout>
                <class>Magegiant_Onestepcheckout_Model</class>
                <resourceModel>onestepcheckout_mysql4</resourceModel>
            </onestepcheckout>
            <onestepcheckout_mysql4>
                <class>Magegiant_Onestepcheckout_Model_Mysql4</class>
                <entities>
                    <survey>
                        <table>magegiant_onestepcheckout_survey</table>
                    </survey>
                    <attribute>
                        <table>magegiant_onestepcheckout_attribute</table>
                    </attribute>
                    <delivery>
                        <table>magegiant_onestepcheckout_delivery</table>
                    </delivery>
                    <customblock_shoppingcart>
                        <table>magegiant_onestepcheckout_customblock_shoppingcart</table>
                    </customblock_shoppingcart>
                    <abandonedcart_customer>
                        <table>magegiant_onestepcheckout_abandonedcart_customer</table>
                    </abandonedcart_customer>
                    <sales_order>
                        <table>magegiant_onestepcheckout_sales_flat_order</table>
                    </sales_order>
                    <sales_order_address>
                        <table>magegiant_onestepcheckout_sales_flat_order_address</table>
                    </sales_order_address>
                    <sales_quote>
                        <table>magegiant_onestepcheckout_sales_flat_quote</table>
                    </sales_quote>
                    <sales_quote_address>
                        <table>magegiant_onestepcheckout_sales_flat_quote_address</table>
                    </sales_quote_address>
                </entities>
            </onestepcheckout_mysql4>
        </models>
        <resources>
            <magegiant_onestepcheckout_setup>
                <setup>
                    <module>Magegiant_Onestepcheckout</module>
                    <class>Magegiant_Onestepcheckout_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </magegiant_onestepcheckout_setup>
            <onestepcheckout_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </onestepcheckout_write>
            <onestepcheckout_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </onestepcheckout_read>
        </resources>
        <helpers>
            <onestepcheckout>
                <class>Magegiant_Onestepcheckout_Helper</class>
            </onestepcheckout>
        </helpers>
        <template>
            <email>
                <onestepcheckout_abandoned_cart_email_chain_template translate="label" module="onestepcheckout">
                    <label>Onestepcheckout Abandoned Cart Demo</label>
                    <file>onestepcheckout/abandonedcart_demo.phtml</file>
                    <type>html</type>
                </onestepcheckout_abandoned_cart_email_chain_template>
            </email>
        </template>
        <sales>
            <quote>
                <totals>
                    <giftwrap>
                        <class>onestepcheckout/total_quote_giftwrap</class>
                        <after>wee,discount,tax,tax_subtotal,grand_total</after>
                    </giftwrap>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <giftwrap>
                        <class>onestepcheckout/total_invoice_giftwrap</class>
                        <after>grand_total</after>
                    </giftwrap>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <giftwrap>
                        <class>onestepcheckout/total_creditmemo_giftwrap</class>
                        <after>grand_total</after>
                    </giftwrap>
                </totals>
            </order_creditmemo>
        </sales>
        <pdf>
            <totals>
                <giftwrap translate="title">
                    <title>Gift wrap</title>
                    <source_field>giftwrap_amount</source_field>
                    <model>onestepcheckout/total_pdf_giftwrap</model>
                    <font_size>7</font_size>
                    <display_zero>0</display_zero>
                    <sort_order>450</sort_order>
                </giftwrap>
            </totals>
        </pdf>
        <fieldsets>
            <sales_convert_quote_address>
                <giant_giftwrap_amount>
                    <to_order>*</to_order>
                </giant_giftwrap_amount>
                <giant_giftwrap_base_amount>
                    <to_order>*</to_order>
                </giant_giftwrap_base_amount>
            </sales_convert_quote_address>
            <sales_convert_quote_item>
                <giant_giftwrap_amount>
                    <to_order_item>*</to_order_item>
                </giant_giftwrap_amount>
                <giant_giftwrap_base_amount>
                    <to_order_item>*</to_order_item>
                </giant_giftwrap_base_amount>
            </sales_convert_quote_item>
        </fieldsets>
        <events>
            <sales_quote_load_after>
                <observers>
                    <onestepcheckout>
                        <class>onestepcheckout/observer</class>
                        <method>salesQuoteAfterLoad</method>
                    </onestepcheckout>
                </observers>
            </sales_quote_load_after>
            <sales_quote_address_collection_load_after>
                <observers>
                    <onestepcheckout>
                        <class>onestepcheckout/observer</class>
                        <method>salesQuoteAddressCollectionAfterLoad</method>
                    </onestepcheckout>
                </observers>
            </sales_quote_address_collection_load_after>
            <sales_quote_save_after>
                <observers>
                    <onestepcheckout>
                        <class>onestepcheckout/observer</class>
                        <method>salesQuoteAfterSave</method>
                    </onestepcheckout>
                </observers>
            </sales_quote_save_after>
            <sales_quote_address_save_after>
                <observers>
                    <onestepcheckout>
                        <class>onestepcheckout/observer</class>
                        <method>salesQuoteAddressAfterSave</method>
                    </onestepcheckout>
                </observers>
            </sales_quote_address_save_after>
            <sales_order_load_after>
                <observers>
                    <onestepcheckout>
                        <class>onestepcheckout/observer</class>
                        <method>salesOrderAfterLoad</method>
                    </onestepcheckout>
                </observers>
            </sales_order_load_after>
            <sales_order_address_collection_load_after>
                <observers>
                    <onestepcheckout>
                        <class>onestepcheckout/observer</class>
                        <method>salesOrderAddressCollectionAfterLoad</method>
                    </onestepcheckout>
                </observers>
            </sales_order_address_collection_load_after>
            <sales_order_save_after>
                <observers>
                    <onestepcheckout>
                        <class>onestepcheckout/observer</class>
                        <method>salesOrderAfterSave</method>
                    </onestepcheckout>
                </observers>
            </sales_order_save_after>
            <sales_order_address_save_after>
                <observers>
                    <onestepcheckout>
                        <class>onestepcheckout/observer</class>
                        <method>salesOrderAddressAfterSave</method>
                    </onestepcheckout>
                </observers>
            </sales_order_address_save_after>
            <core_copy_fieldset_sales_convert_quote_to_order>
                <observers>
                    <onestepcheckout>
                        <class>onestepcheckout/observer</class>
                        <method>coreCopyFieldsetSalesConvertQuoteToOrder</method>
                    </onestepcheckout>
                </observers>
            </core_copy_fieldset_sales_convert_quote_to_order>
            <core_copy_fieldset_sales_convert_quote_address_to_order_address>
                <observers>
                    <onestepcheckout>
                        <class>onestepcheckout/observer</class>
                        <method>coreCopyFieldsetSalesConvertQuoteAddressToOrderAddress</method>
                    </onestepcheckout>
                </observers>
            </core_copy_fieldset_sales_convert_quote_address_to_order_address>
            <core_copy_fieldset_sales_copy_order_to_edit>
                <observers>
                    <onestepcheckout>
                        <class>onestepcheckout/observer</class>
                        <method>coreCopyFieldsetSalesCopyOrderToEdit</method>
                    </onestepcheckout>
                </observers>
            </core_copy_fieldset_sales_copy_order_to_edit>
            <core_copy_fieldset_sales_copy_order_billing_address_to_order>
                <observers>
                    <onestepcheckout>
                        <class>onestepcheckout/observer</class>
                        <method>coreCopyFieldsetSalesCopyOrderBillingAddressToOrder</method>
                    </onestepcheckout>
                </observers>
            </core_copy_fieldset_sales_copy_order_billing_address_to_order>
            <core_copy_fieldset_sales_copy_order_shipping_address_to_order>
                <observers>
                    <onestepcheckout>
                        <class>onestepcheckout/observer</class>
                        <method>coreCopyFieldsetSalesCopyOrderShippingAddressToOrder</method>
                    </onestepcheckout>
                </observers>
            </core_copy_fieldset_sales_copy_order_shipping_address_to_order>
            <core_copy_fieldset_customer_account_to_quote>
                <observers>
                    <onestepcheckout>
                        <class>onestepcheckout/observer</class>
                        <method>coreCopyFieldsetCustomerAccountToQuote</method>
                    </onestepcheckout>
                </observers>
            </core_copy_fieldset_customer_account_to_quote>
            <core_copy_fieldset_customer_address_to_quote_address>
                <observers>
                    <onestepcheckout>
                        <class>onestepcheckout/observer</class>
                        <method>coreCopyFieldsetCustomerAddressToQuoteAddress</method>
                    </onestepcheckout>
                </observers>
            </core_copy_fieldset_customer_address_to_quote_address>
            <core_copy_fieldset_checkout_onepage_quote_to_customer>
                <observers>
                    <onestepcheckout>
                        <class>onestepcheckout/observer</class>
                        <method>coreCopyFieldsetCheckoutOnepageQuoteToCustomer</method>
                    </onestepcheckout>
                </observers>
            </core_copy_fieldset_checkout_onepage_quote_to_customer>
            <core_copy_fieldset_sales_convert_quote_address_to_customer_address>
                <observers>
                    <onestepcheckout>
                        <class>onestepcheckout/observer</class>
                        <method>coreCopyFieldsetQuoteAddressToCustomerAddress</method>
                    </onestepcheckout>
                </observers>
            </core_copy_fieldset_sales_convert_quote_address_to_customer_address>
        </events>
    </global>
    <crontab>
        <jobs>
            <abandonedcart_apply>
                <schedule>
                    <cron_expr>* * * * *</cron_expr>
                </schedule>
                <run>
                    <model>onestepcheckout/cron::cronJobs</model>
                </run>
            </abandonedcart_apply>
        </jobs>
    </crontab>
    <default>
        <onestepcheckout>
            <general>
                <is_enabled>1</is_enabled>
                <allow_ship_to_defferent_address>1</allow_ship_to_defferent_address>
                <title>One Step Checkout</title>
                <description>Please enter your details below to complete your purchase.</description>
                <is_block_numbering>1</is_block_numbering>
                <default_payment_method></default_payment_method>
                <default_shipping_method></default_shipping_method>
                <auto_detect_address>1</auto_detect_address>
            </general>
            <display_configuration>
                <is_enabled_coupon>1</is_enabled_coupon>
                <display_apply_coupon_button>1</display_apply_coupon_button>
                <is_enabled_giftmessage>1</is_enabled_giftmessage>
                <is_enabled_comments>1</is_enabled_comments>
                <is_enabled_newsletter>1</is_enabled_newsletter>
                <is_enabled_related_products>1</is_enabled_related_products>
            </display_configuration>
            <design_configuration>
                <page_layout>3columns</page_layout>
                <style_color><![CDATA[#3399cc]]></style_color>
                <place_order_color>3398CC</place_order_color>
            </design_configuration>
            <abandoned_cart>
                <sale_amount><![CDATA[>,0]]></sale_amount>
                <email_chain_schedule><![CDATA[0,3,0]]></email_chain_schedule>
            </abandoned_cart>
        </onestepcheckout>
    </default>
</config>